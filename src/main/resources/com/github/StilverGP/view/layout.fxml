<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="borderPane" minHeight="300.0" minWidth="400.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.github.StilverGP.view.AppController">
   <top>
    <MenuBar nodeOrientation="RIGHT_TO_LEFT" BorderPane.alignment="CENTER">
      <menus>
            <Menu fx:id="admin" mnemonicParsing="false" text="Admin" visible="false">
              <items>
                  <Menu mnemonicParsing="false" text="Modificar habitaciones">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#addRoom" text="Agregar habitacion" />
                      <MenuItem mnemonicParsing="false" onAction="#removeRoom" text="Eliminar habitacion" />
                    </items>
                  </Menu>
              </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Cuenta">
               <items>
                  <Menu mnemonicParsing="false" text="Configuración de cuenta">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#updUserUsername" text="Actualizar username" />
                        <MenuItem mnemonicParsing="false" onAction="#updUserName" text="Actualizar nombre" />
                        <MenuItem mnemonicParsing="false" onAction="#updMail" text="Actualizar Mail" />
                    </items>
                  </Menu>
                  <MenuItem mnemonicParsing="false" onAction="#myBooks" text="Mis reservas" />
                  <MenuItem mnemonicParsing="false" onAction="#logOff" text="Cerrar Sesión" />
               </items>
            </Menu>
      </menus>
    </MenuBar>
   </top>
</BorderPane>
